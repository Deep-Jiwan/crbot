# AIO Services Environment Configuration
# Copy this file to .env and fill in your values

# Frame dimensions
FRAME_WIDTH=1080
FRAME_HEIGHT=1920

# ==============================================
# ZeroMQ Configuration
# ==============================================
# Subscriber address (where frames come from)
ZMQ_ADDRESS=tcp://gateway:5550
ZMQ_SUB_ADDRESS=tcp://gateway:5550

# Publishing ports for each service (optional - using defaults)
WINWIN_PUB_PORT=5570
ELIXIR_PUB_PORT=5560
CARD_PUB_PORT=5590
TROOP_PUB_PORT=5580

# ==============================================
# WinWin Detection Service (Port 5570)
# ==============================================
# Winner detection coordinates
WINNER_Y1=267
WINNER_Y2=800
WINNER_X1=400
WINNER_X2=424

# Target colors for win/lose detection
TARGET_B1=255
TARGET_G1=204
TARGET_R1=255
TOLERANCE1=50

TARGET_B2=255
TARGET_G2=255
TARGET_R2=102
TOLERANCE2=50

# ==============================================
# Elixir Counter Service (Port 5551)
# ==============================================
# Elixir bar detection coordinates
ELIXIR_Y=1810
ELIXIR_X_START=340
ELIXIR_X_END=990
ELIXIR_STEP=70

# Elixir color detection
TARGET_B=241
TARGET_G=119
TARGET_R=233
TOLERANCE=80

# ==============================================
# Card Detection Service (Port 5554)
# ==============================================
# Roboflow configuration for card detection
CARD_DETECTION_ROBOFLOW_API_KEY=your-key
CARD_DETECTION_ROBOFLOW_URL=http://roboinference:9001
CARD_DETECTION_WORKSPACE_NAME=your-workspace
CARD_DETECTION_WORKFLOW_ID=custom-workflow


# ==============================================
# Troop Detection Service (Port 5560)
# ==============================================
# Uses same Roboflow configuration as card detection
# ROBOFLOW_URL, ROBOFLOW_API_KEY, WORKSPACE_NAME, WORKFLOW_ID
TROOP_DETECTION_ROBOFLOW_API_KEY=your-key
TROOP_DETECTION_ROBOFLOW_URL=http://roboinference:9001
TROOP_DETECTION_WORKSPACE_NAME=your-workspace
TROOP_DETECTION_WORKFLOW_ID=detect-count-and-visualize




# ==============================================
# General Settings
# ==============================================
# Sleep time between frame processing (seconds)
SLEEP_TIME=0.1

# Enable/disable annotation output
ANNOTATE=True
